{
  "name": "vibefire-mono-babe",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "build": "turbo build",
    "clean-nms": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "clean": "git clean -xdf ./node_modules */**/node_modules",
    "vfa": "turbo dev --parallel --filter vibefire.app",
    "app": "turbo dev --parallel --filter api.vibefire.app --filter app.vibefire.native",
    "format": "prettier --write \"**/*.{js,cjs,mjs,ts,tsx,md,json}\" --ignore-path .gitignore --ignore-path .wrangler",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "type-check": "turbo type-check"
  },
  "dependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@types/jest": "^29.5.10",
    "@types/lodash": "^4.14.202",
    "@types/luxon": "^3.3.5",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "@vibefire/config": "0.1.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "syncpack": "^12.3.0",
    "ts-jest": "^29.1.1",
    "turbo": "^1.10.16"
  }
}
