{
  "extends": [
    "@tsconfig/react-native/tsconfig.json",
    "../../tsconfig.eslint.json"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": true,
    "paths": {
      "#/*": ["./assets/*"],
      "~/*": ["./src/*"],
      "!/*": ["./src/*"],
      "!api/*": ["../../packages/api/src/*"]
    },
    "types": ["@types/jest", "nativewind/types", "webpack-env"]
  },
  "include": ["expo-plugins", ".expo", "src", "*.ts", "**/*.js"],
  "exclude": ["*.test.ts"]
}
